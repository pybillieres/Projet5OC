{% extends 'layout.twig' %}

{% block head %}<title>Mon compte</title>{% endblock %}

{% block content %}
<div class="album py-5">
  <div class="container">
    <div class="row">
      {% if admin != null %}
      <div class="col-12 col-lg-6">
      {% else %}
      <div class="col-12">
      {% endif %}
        <div class="card mb-4 box-shadow">
          <div class="card-body">
            <p class="card-title text-center">Mon compte<p>
            <p class="card-text"></p>
            <div class="row">
              <div class='col-lg-6 text-center'><a href='user/myAccount'>-Mes informations</a></div>
              <div class='col-lg-6 text-center'><a href='user/changePassword'>-Changer mot de passe</a></div>
            </div>
          </div>
        </div>
      </div>
      {% if admin != null %}
      <div class="col-12 col-lg-6">
        <div class="card mb-4 box-shadow">
          <div class="card-body">
            <p class="card-title text-center">Administration<p>
            <p class="card-text"></p>
            <div class="row">
              <div class='col-lg-6 text-center'><a href='review/getReportedReviews'>-Commentaires signalés</a></div>
              <div class='col-lg-6 text-center'><a href='user/listUsers'>-Gérer les utilisateurs</a></div>
              <div class="d-flex justify-content-between align-items-center">
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      <div class="col-md-12">
        <div class="card mb-4 box-shadow">
          <div class="card-body">
            <p class="card-title text-center">Mes derniers avis<p>
            <table class='table'>
              <thead>
                <tr>
                  <th scope='col'>Titre du film</th>
                  <th scope='col'>Date</th>
                  <th scope='col'>Note</th>
                  <th scope='col'>Contenu</th>
                </tr>
              </thead>
              <tbody>
                {% for review in reviews %}
                <tr>
                  <td id={{review.idMovie}} class='movie'></td>
                  <td>{{review.date}}</td>
                  <td>{% for i in 1..5 %}
                    {% set starClass = (review.rating >= i ? "fas fa-star" : "far fa-star")  %}
                    <i class="{{ starClass }}"></i>
                    {% endfor %}</td>
                  <td>{{review.content | slice(0, 30)}}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
            <a class='card-link text-center' href='User/myReviews'><P>voir plus</p></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
          
<script src='public/js/myReviewsMain.js'></script>
<script src='public/js/details.js'></script>
{% endblock %}