      <div class="card mb-4 box-shadow">
        <div class="card-body">
          <p class="card-title text-center">Mon compte<p>
          <div class="row">
            {% if imgProfil is defined %}
            <div class='col-lg-12 text-center'>
              <img src='upload/{{pseudo}}profil.jpg' class='img-thumbnail col-lg-4'>
              <p>Mon image de profil</p>
            </div>
            {% endif %}
            <div class='col-lg-12 text-center'>
              <a href='user/modifyImg'>Modifier mon image de profil</a>
            </div>
            <div class='col-lg-6 text-center'>Mon pseudo : {{pseudo}}</div>
            <div class='col-lg-6 text-center'>Nombre de commentaire post√© : {{nbrReviews}}</div>
          </div>
        <div class="d-flex justify-content-between align-items-center">
      </div>
    </div>
  </div>
</div>

{% endblock %}