                    <thead>
                      <tr>
                      <th scope='col'>login</th>
                      <th scope='col'>Administrateur</th>
                      <th scope='col'></th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for user in users %}
                      
                        <tr>
                        <td  >{{user.login}}</td>
                        {% if user.admin == 1 %}
                        <td>oui</td>
                        {% else %}
                        <td>non</td>
                        {% endif %}
                        </tr>
                      {% endfor %}
                    </tbody>
                    </table>
                  {% for review in reviews %}
                  
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
          
<script src='public/js/myReviewsMain.js'></script>
<script src='public/js/details.js'></script>
{% endblock %}