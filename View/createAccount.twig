{% extends 'layout.twig' %}

{% block head %}<title>Créer un compte</title>{% endblock %}

{% block content %}
<a href='index.php' class="btn btn-primary">Retourner à la page d'accueil</a>
<form method="post" action='index.php' class="mt-5 mb-5 col-lg-4 formLogin text-center">
    <fieldset>
        <label for="login">login</label>
        <input type="text" name="login" id="login" class="form-control col-lg-12" required>
        <label for="password">password</label>
        <input type="password" name="password" id="password" class="form-control col-lg-12" required>
        <label for="email">adresse Email</label>
        <input type="email" name="email" id="email" class="form-control col-lg-12" required>
        <input type="hidden" name='action' value='createAccount'>
        <input type="hidden" name='controller' value='connection'>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="CheckCgu" required>
            <label class="form-check-label" for="CheckCgu">J'accepte les CGU</label>
        </div>
        <input type="submit" value='submit' class="mt-3 btn btn-primary">
        
    </fieldset>
</form>

{% endblock %}